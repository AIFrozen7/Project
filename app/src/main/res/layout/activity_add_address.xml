<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddressActivity"
    android:orientation="vertical"
    android:background="#fff">
    <TextView
        android:gravity="center_horizontal"
        android:text="新增收货地址"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">
        <RelativeLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text1"
                android:text="收件人:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:id="@+id/add_address_name"
                android:hint="李小二"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@id/text1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_line1"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_below="@id/view_line1"
                android:hint="手机号码:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@id/view_line1"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:id="@+id/add_address_phone"
                android:hint="12345678910"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@id/text2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_line2"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_below="@id/view_line2"
                android:id="@+id/text3"
                android:text="所在地区:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@id/view_line2"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:hint="选择地址"
                android:id="@+id/add_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@id/text3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_line3"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_below="@id/view_line3"
                android:id="@+id/text4"
                android:text="详细地址:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@id/view_line3"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:id="@+id/add_address_details"
                android:hint="北京海淀上地八维"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@id/text4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_line4"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_below="@id/view_line4"
                android:id="@+id/text5"
                android:text="邮政编码:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@id/view_line4"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:id="@+id/add_address_zipCode"
                android:hint="031100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/save_address_btn"
        android:layout_marginTop="20dp"
        android:text="保存并使用"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:background="@drawable/shop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>