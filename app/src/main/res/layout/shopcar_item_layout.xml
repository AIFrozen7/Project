<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_centerVertical="true"
    android:gravity="center_vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/shopcar_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_toRightOf="@id/shopcar_item_checkbox"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="18dp"
            android:gravity="center_vertical">
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/shopcar_item_img"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/shopcar_item_name"
                android:text="name"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/shopcar_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shopcar_item_price"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/shopcar_item_img"
                android:text="price"
                android:textSize="14sp"
                android:textColor="#ff0000"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.bwei.weidustore.custom.CustomView
                android:id="@+id/shopcar_item_custom"
                app:nums="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="30dp"></com.bwei.weidustore.custom.CustomView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
