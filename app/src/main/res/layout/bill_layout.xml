<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:id="@+id/img_all"
                    android:text="全部订单"
                    android:gravity="center"
                    android:drawableTop="@mipmap/common_icon_alllist_n_hdpi"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/img_waitPay"
                    android:text="待付款"
                    android:gravity="center"
                    android:drawableTop="@mipmap/common_icon_pay_n_hdpi"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/img_waitReceive"
                    android:text="待收货"
                    android:gravity="center"
                    android:drawableTop="@mipmap/common_icon_receive_n"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/img_waitComment"
                    android:text="待评价"
                    android:gravity="center"
                    android:drawableTop="@mipmap/commom_icon_comment_n_hdpi"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:button="@null"
                    android:id="@+id/img_finish"
                    android:text="已完成"
                    android:gravity="center"
                    android:drawableTop="@mipmap/common_icon_finish_n_hdpi"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>

            </RadioGroup>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bill_fragment_recyclerview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
