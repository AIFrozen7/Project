<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/address_name"
                android:text="name"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/address_phone"
                android:text="13324247373"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/address_text"
                android:layout_below="@id/address_name"
                android:text="北京市 海淀区 上地 八位研修学院"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_line"
                android:layout_below="@id/address_text"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <CheckBox
                android:id="@+id/address_default_checkbox"
                android:layout_below="@id/view_line"
                android:text="设为默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/address_btn_shape"
                android:layout_below="@id/view_line"
                android:layout_toLeftOf="@id/address_del"
                android:text="修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/address_btn_shape"
                android:id="@+id/address_del"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view_line"
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
